<?xml version="1.0" encoding="utf-8" ?>
<pages:PopupPage xmlns="http://xamarin.com/schemas/2014/forms"
                 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                 xmlns:pages="clr-namespace:Rg.Plugins.Popup.Pages;assembly=Rg.Plugins.Popup"
                 x:Class="MobileApp.Pages.PopUpMenu.LocationPopup">
    <Frame CornerRadius="10" VerticalOptions="Center" HorizontalOptions="Center">
        <StackLayout Margin="10" >
            <Label Text="App need location access to continue"/>
            <Button Text="Go to Settings" CornerRadius="10" VerticalOptions="End" Command="{Binding OpenSettingsCommand}"/>
        </StackLayout>
    </Frame>
</pages:PopupPage>